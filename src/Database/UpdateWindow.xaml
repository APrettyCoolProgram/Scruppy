<Window
    x:Class="Scruppy.Database.UpdateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Scruppy.Database"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Scruppy: Database Update"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="btnUpdateDatabase"
            Margin="340,10,340,392"
            Content="Update database">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Button.Resources>
        </Button>
        <TextBox
            x:Name="txbxUpdateStatus"
            Margin="10,50,10,10"
            BorderBrush="Black"
            BorderThickness="2"
            IsReadOnly="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Visible">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </TextBox.Resources>
        </TextBox>
    </Grid>
</Window>
